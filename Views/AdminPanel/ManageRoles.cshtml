@model E_Wolontariat.Models.ManageRolesViewModel

<h1>Zarządzaj rolami użytkownika</h1>
<p><strong>Użytkownik:</strong> @Model.Email</p>

<form asp-action="ManageRoles" method="post">
    <input type="hidden" asp-for="UserId" />

    <div class="form-group">
        <label>Role</label>
        @foreach (var role in Model.AvailableRoles)
        {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="@role.Name" name="roles" 
                @(Model.UserRoles.Contains(role.Name) ? "checked" : "") />
                    <label class="form-check-label">@role.Name</label>
                </div>
        }
    </div>

    <button type="submit" class="btn btn-primary">Zapisz</button>
    <a asp-action="Index" class="btn btn-secondary">Powrót</a>
</form>
